<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="3dp"
    android:layout_margin="3dp"
    android:layout_height="@dimen/collections_item">
    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/collection_cover_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_marginTop="100dp"
        tools:text="Light"
        android:id="@+id/collection_name"
        android:textColor="@color/secondaryText"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="30dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/collection_creater_img" />
        <TextView
            tools:text="Farmaan Elahi"
            android:textSize="16dp"
            android:paddingStart="10dp"
            android:id="@+id/collection_creater_name"
            android:textColor="@color/secondaryText"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <View
        android:background="@drawable/scrim_overlay_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view" />


</android.support.v7.widget.CardView>